<h1>All Comments</h1>
<% if @comments %>
<table class="table table-hover">
	<thead>
		<tr>
			<th>Comments</th>
			<th>Products</th>
		</tr>
	</thead>
	<tbody>
		<% @comments.each do |com| %>
		<tr>
			<td><%= com.comment %></td>
			<td><%= com.product_name %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<% end %>
<a href="/products"><h3>Back</h3></a>
